@model ISproj.Models.CourseModel

@{
    ViewData["Title"] = "Edit";
    Layout = "/Views/Home/_Layout.cshtml";
    ViewData.AddActivePage(HomeNavPages.Courses);
}

<h2>Edit</h2>

<h4>CourseModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credits" class="control-label"></label>
                <input asp-for="Credits" class="form-control" />
                <span asp-validation-for="Credits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherId" class="control-label"></label>
                <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <select asp-for="Day" class="form-control">
                    if(Model.Day == "Luni")
                    {
                    <option value="Luni" selected>Luni</option>
                    }
                    else
                    {
                    <option value="Luni">Luni</option>
                    }

                    if(Model.Day == "Marti")
                    {
                    <option value="Marti" selected>Marti</option>
                    }
                    else
                    {
                    <option value="Marti">Marti</option>
                    }

                    if(Model.Day == "Miercuri")
                    {
                    <option value="Miercuri" selected>Miercuri</option>
                    }
                    else
                    {
                    <option value="Miercuri">Miercuri</option>
                    }

                    if(Model.Day == "Joi")
                    {
                    <option value="Joi" selected>Joi</option>
                    }
                    else
                    {
                    <option value="Joi">Joi</option>
                    }

                    if(Model.Day == "Vineri")
                    {
                    <option value="Vineri" selected>Vineri</option>
                    }
                    else
                    {
                    <option value="Vineri">Vineri</option>
                    }
                </select>
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hour" class="control-label"></label>
                <input asp-for="Hour" class="form-control" min="8" max="18" />
                <span asp-validation-for="Hour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" min="1" max="2" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Optional" class="form-check-input"> Optional course</input>
                <span asp-validation-for="Optional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
