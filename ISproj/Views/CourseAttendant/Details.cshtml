@model ISproj.Models.CourseAttendant

@{
    ViewData["Title"] = "Details";
    Layout = "/Views/Home/_Layout.cshtml";
    ViewData.AddActivePage(HomeNavPages.Attendant);
}

<h2>Details</h2>

<div>
    <h4>CourseAttendant</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Grade)
        </dt>
        <dd>
            @if (Model.Grade != null)
            {
                @Html.DisplayFor(modelItem => Model.Grade)
            }
            else
            {
                <span>-</span>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Attendances)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Attendances)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.FullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
