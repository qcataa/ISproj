@model ICollection<ISproj.Models.CourseAttendant>

@{
    ViewData["Title"] = "Edit";
    Layout = "/Views/Home/_Layout.cshtml";
    ViewData.AddActivePage(HomeNavPages.Student);
}

<h2>Student report</h2>

@if (Model.Count == 0)
{
    <h4>The student is not registered to any courses</h4>

}
else
{
    <h4>Grades and attendances</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Course
                </th>
                <th>
                    Attendances
                </th>
                <th>
                    Grade
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Attendances)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grade == null ? "-" : item.Grade.ToString())
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div>
    <a asp-action="Index">Back to student list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
